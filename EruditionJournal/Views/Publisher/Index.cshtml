@model IEnumerable<EruditionJournal.Models.Publisher>
@{
    ViewBag.Title = "Publishers";
}

<div class="container">
    <h2>Publishers</h2>

    <div class="block-link">
        <a href="/Publisher/Create" class="btn btn-default btn-sm">Register as publisher</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Display Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Publisher in Model)
            {
                <tr>
                    <td><a href="/Publisher/Detail/@(Publisher.PublisherId)">@(Publisher.PublisherFName) @(Publisher.PublisherLName)</a></td>
                    <td>@(Publisher.PublisherDisplayName)</td>
                </tr>
            }
        </tbody>
    </table>
</div>