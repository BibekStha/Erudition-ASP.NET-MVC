@model EruditionJournal.Models.Category
@{
    ViewBag.Title = "Edit" + Model.CategoryName;
}

<div class="container">
    <h2>Edit @Model.CategoryName</h2>

    <form method="post" action="/Category/Edit/@Model.CategoryId">
        <div class="form-group">
            <label for="categoryName">Name</label>
            <input type="text" class="form-control" id="categoryName" name="categoryName" value="@Model.CategoryName" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-default" href="/Category/Detail/@Model.CategoryId">Cancel</a>
        </div>
    </form>
</div>