@model EruditionJournal.Models.Category
@{
    ViewBag.Title = "Delete" + Model.CategoryName;
}

<div class="container">
    <h2>Delete @Model.CategoryName</h2>

    <form method="post" action="/Category/Del/@Model.CategoryId">
        <div class="form-group">
            <p>Are you sure you want to delete this category?</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a class="btn btn-default" href="/Category/Detail/@Model.CategoryId">Cancel</a>
        </div>
    </form>
</div>