@model EruditionJournal.Models.Publication
@{
    ViewBag.Title = "Upload Manuscript";
}

<h2>@Model.PublicationTitle</h2>

<p>@ViewBag.errorMessage</p>

<form method="post" action="/Publication/Upload/@Model.PublicationId" enctype = "multipart/form-data">
    <div class="form-group">
        <label for="manuscript">Upload Manuscript</label>
        <input type="file" class="form-control" id="manuscript" name="manuscript" />
        <small>Only pdf files are accepted</small>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Upload</button>
        <a href="/Publication/Detail/@Model.PublicationId" class="btn btn-default">Cancel</a>
    </div>
    <div class="form-group">
        @ViewBag.FileStatus
    </div>
</form>