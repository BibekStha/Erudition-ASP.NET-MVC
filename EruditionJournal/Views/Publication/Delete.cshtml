@model EruditionJournal.Models.Publication
@{
    ViewBag.Title = "Delete " + Model.PublicationTitle;
}

<div class="container">
    <h2>Delete @Model.PublicationTitle</h2>

    <form method="post" action="/Publication/Del/@Model.PublicationId">
        <div class="form-group">
            <p>Are you sure you want to delete @Model.PublicationTitle from publications List?</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a class="btn btn-default" href="/Publication">Cancel</a>
        </div>
    </form>
</div>